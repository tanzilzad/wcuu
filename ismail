#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char password[100];
    int hasUpper = 0, hasLower = 0, hasDigit = 0, hasSpecial = 0;

    printf("Sifreni daxil et: ");
    gets(password); // beginner üçün (sonra fgets öyrəniləcək)

    int length = strlen(password);

    for (int i = 0; i < length; i++) {
        if (isupper(password[i]))
            hasUpper = 1;
        else if (islower(password[i]))
            hasLower = 1;
        else if (isdigit(password[i]))
            hasDigit = 1;
        else
            hasSpecial = 1;
    }

    if (length >= 8 && hasUpper && hasLower && hasDigit && hasSpecial) {
        printf("Sifre GÜCLÜDÜR\n");
    } else {
        printf("Sifre ZƏİFDİR\n");

        if (length < 8)
            printf("- En az 8 simvol olmalidir\n");
        if (!hasUpper)
            printf("- Boyuk herf yoxdur\n");
        if (!hasLower)
            printf("- Kicik herf yoxdur\n");
        if (!hasDigit)
            printf("- Reqem yoxdur\n");
        if (!hasSpecial)
            printf("- Xususi simvol yoxdur\n");
    }

    return 0;
}
