#include <stdio.h>
#include <string.h>

#define MAX 50

struct Contact {
    char name[30];
    char phone[15];
};

int main() {
    struct Contact contacts[MAX];
    int count = 0;
    int choice;

    while (1) {
        printf("\n--- Telefon Kitabcasi ---\n");
        printf("1. Kontakt elave et\n");
        printf("2. Kontaktlari goster\n");
        printf("3. Cixis\n");
        printf("Secim et: ");
        scanf("%d", &choice);

        if (choice == 1) {
            if (count >= MAX) {
                printf("Yaddas doludur!\n");
                continue;
            }

            printf("Ad: ");
            scanf("%s", contacts[count].name);

            printf("Telefon: ");
            scanf("%s", contacts[count].phone);

            count++;
            printf("Kontakt elave olundu!\n");
        }

        else if (choice == 2) {
            if (count == 0) {
                printf("Hec bir kontakt yoxdur.\n");
            } else {
                for (int i = 0; i < count; i++) {
                    printf("%d. %s - %s\n",
                           i + 1,
                           contacts[i].name,
                           contacts[i].phone);
                }
            }
        }

        else if (choice == 3) {
            printf("Programdan cixildi.\n");
            break;
        }

        else {
            printf("Yanlis secim!\n");
        }
    }

    return 0;
}
